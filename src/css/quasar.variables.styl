$primary    = #027BE3
$secondary  = #26A69A
$accent     = #9C27B0

$positive   = #21BA45
$negative   = #C10015
$info       = #31CCEC
$warning    = #F2C037
$white      = #FFFFFF
$black      = #000000
$body-color = #404040

$body-font-size ?= 1rem
$min-line-height ?= 1.45
$body-line-height ?= 1.45
$typography-font-family ?= 'Work Sans', '-apple-system', 'Helvetica Neue', 'Helvetica', 'Arial', 'sans-serif'

$headings ?= {
    h1: {
        size: 2.571rem,
        line-height: 1.45,
        weight: 400,
        letter-spacing: 0,
    },
    h2: {
        size: 2.143rem,
        line-height: 1.45,
        letter-spacing: 0,
        weight: 400,
    },
    h3: {
        size: 1.714rem,
        line-height: 1.45,
        letter-spacing: 0,
        weight: 400,
    },
    h4: {
        size: 1.286rem,
        line-height: 1.45,
        letter-spacing: 0,
        weight: 400,
    },
    h5: {
        size: 1.000rem,
        line-height: 1.45,
        letter-spacing: 0,
        weight: 400,
    },
    h6: {
        size: 0.857rem,
        line-height: 1.45,
        letter-spacing: 0,
        weight: 400,
    }
}

$h-tags ?= {
    h1: $headings.h1,
    h2: $headings.h2,
    h3: $headings.h3,
    h4: $headings.h4,
    h5: $headings.h5,
    h6: $headings.h6
}

$shadow-color ?= gray
$button-font-size ?= 1rem

$generic-border-radius ?= 5px
$input-text-color ?= $body-color